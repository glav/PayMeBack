@*<div id="add-debt-payment-placeholder">*@
<div id="add-debt-payment-container" class="hidden">
    <a href="#close" id="add-debt-payment-close">Close</a>
    <h3>Add Payment</h3>
    <div id="add-debt-payment-section" data-ng-controller="debtPaymentController">
        <img src="@Url.Content("~/Images/progress.gif")" alt="Progress" title="progress" class="add-debt-payment-progress-indicator progress-indicator hidden" />
        <fieldset>

            <ul>
                <li class="amount">
                    <label for="payment-amount">Amount</label>
                    <input id="payment-amount" data-ng-model="paymentData.AmountPaid" type="number" class="data-entry" />
                </li>
                <li class="date">
                    <label>Date</label>
                    <input id="payment-date" data-ng-model="paymentData.PaymentDate" type="date" class="data-entry"  />
                </li>
                <li class="type">
                    <label>Type</label>
                    <select id="payment-type" data-ng-model="paymentData.TypeOfPayment" class="data-entry" data-ng-options="p.value as p.label for p in paymentTypeOptions">
                    </select>
                </li>
            </ul>
            <div class="action-container">
                <input id="add-payment-action" type="button" value="Add" class="action-button" data-ng-click="submitDebtDataToServer()" />
            </div>
        </fieldset>
    </div>
</div>
@*</div>*@
