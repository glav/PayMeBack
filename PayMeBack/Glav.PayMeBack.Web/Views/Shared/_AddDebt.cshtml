<div id="add-debt-modal" modal="addDebtModal" options="opts" close="closeAddDebtModal()">
    <div id="add-debt-container" class="dialog-container" data-ng-controller="addDebtController" data-ng-model="debtData">
        <h3>Add a debt that is owed to you</h3>
        <img src="@Url.Content("~/Images/progress.gif")" alt="Progress" title="progress" class="add-debt-progress-indicator progress-indicator hidden" />
        <form data-ng-submit="submitDebtDataToServer()">
            <fieldset class="dialog-form">
                <ul>
                    <li>
                        <label for="add-debt-user-email">Email address of person who owes you money:</label>
                        <input required type="email" id="add-debt-user-email" placeholder="Email Address" maxlength="50" data-ng-model="debtData.emailAddress" />
                    </li>
                    <li>
                        <label for="add-debt-amount">Enter amount owed to you:</label>
                        <input required type="number" placeholder="Amount" data-ng-required="debtData.amountOwed > 0" id="add-debt-amount" maxlength="10" class="input-money" data-ng-model="debtData.amountOwed" />
                    </li>
                    <li>
                        <label for="add-debt-reason">What is the reason or nature of the debt?</label>
                        <input type="text" id="add-debt-reason" placeholder="Reaosn (if any)" maxlength="255" data-ng-model="debtData.debtReason" />
                    </li>
                    <li>
                        <label for="add-debt-initial-amount">Enter an amount has already been paid off, if any:</label>
                        <input type="number" id="add-debt-initial-amount" maxlength="10" class="input-money" data-ng-model="debtData.initialAmountPaid" />
                    </li>
                    <li>
                        <label for="add-debt-notes">General notes or detail related to this debt:</label>
                        <input type="text" id="add-debt-notes" placeholder="Notes (if any)" maxlength="255" data-ng-model="debtData.notes" />
                    </li>
                    <li>
                        <label for="add-debt-payment-period">How often do you expect payments to be made?</label>
                        <select id="add-debt-payment-period" data-ng-model="debtData.paymentPeriod" data-ng-options="p.value as p.label for p in paymentPeriodOptions">
                        </select>
                    </li>
                    <li>
                        <label for="add-debt-end-date">Expected or desired date this debt should be paid off by:</label>
                        <input type="date" id="add-debt-end-date" dateValid placeholder="yyyy-mm-dd" placeholder="yyyy-mm-dd" pattern="\d{4}[/-]\d{1,2}[/-]\d{1,2}" maxlength="10" data-ng-model="debtData.expectedEndDate" />
                    </li>
                </ul>
                <input type="submit" value="Submit" id="add-debt-submit" class="action-button" />
            </fieldset>
        </form>
    </div>
</div>
