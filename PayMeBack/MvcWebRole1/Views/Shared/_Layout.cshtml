@model Glav.PayMeBack.Web.Models.BaseActionModel

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Pay Me Back</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/MainCss")" rel="stylesheet" type="text/css" />
        <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
        <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
		<header>
			@*Custom Header section if required*@
			@RenderSection("header",false)

			@Html.Partial("_HeaderTitle",Model)
			@Html.Partial("_HeaderMenu",Model)
		</header>
        <div id="body">
            @RenderBody()
        </div>
		<footer>
			@RenderSection("footer",false)
		</footer>
    </body>
</html>
